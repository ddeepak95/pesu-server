DEEPGRAM_API_KEY=your_deepgram_api_key
OPENAI_API_KEY=your_openai_api_key
CARTESIA_API_KEY=your_cartesia_api_key

# Optional: Connect via Daily WebRTC locally
DAILY_API_KEY=your_daily_api_key

# Firebase Admin (for audio storage)
# Firebase Storage is used for storing voice recording audio files
# Option 1: Service account key as JSON string (recommended for serverless environments)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# Option 2: Path to service account JSON file (alternative, if file-based auth is preferred)
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Supabase (for logging voice messages)
# Environment Selection: Set to 'development' or 'production' (defaults to 'development')
SUPABASE_ENV=development

# Development Supabase Instance
SUPABASE_DEV_URL=https://your-dev-project.supabase.co
SUPABASE_DEV_ANON_KEY=your_dev_anon_key

# Production Supabase Instance
SUPABASE_PROD_URL=https://your-prod-project.supabase.co
SUPABASE_PROD_ANON_KEY=your_prod_anon_key