# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Supabase (for logging voice messages)
SUPABASE_URL=https://xxx.supabase.co
